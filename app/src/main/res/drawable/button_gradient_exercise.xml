<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F97316"
                android:endColor="#EA580C"
                android:angle="45" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#DC2626" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#E5E7EB" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#D1D5DB" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FB923C"
                android:endColor="#F97316"
                android:angle="45" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#EA580C" />
        </shape>
    </item>
</selector> 