<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0EA5E9"
                android:endColor="#0284C7"
                android:angle="45" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#0369A1" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#E5E7EB" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#D1D5DB" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#38BDF8"
                android:endColor="#0EA5E9"
                android:angle="45" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#0284C7" />
        </shape>
    </item>
</selector> 